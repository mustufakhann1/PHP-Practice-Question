         $M = array (
         			 array(
                     "Name"=>"Mustufa",
                     "sirname"=>"khan"
                     ),
                     
                     array(
                     "Name"=>"Alfaiz",
                     "sirname"=>"khan"
                     )
         );
         
         for ($i=0;$i<1;$i++){
         
         if ($M[$i]["Name"]=="Mustufa"){
         
         echo "Big Brother"."<br>";
         }elseif($M[$i]["Name"]=="Alfaiz"){
         
         echo "Small Brother"."<br>";
         }
         }
